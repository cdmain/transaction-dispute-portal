{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-service",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/auth/{**catch-all}" }
        ]
      },
      "transactions-route": {
        "ClusterId": "transaction-service",
        "Match": {
          "Path": "/api/transactions/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/transactions/{**catch-all}" }
        ]
      },
      "disputes-route": {
        "ClusterId": "dispute-service",
        "Match": {
          "Path": "/api/disputes/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/disputes/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "auth-service": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
          }
        }
      },
      "transaction-service": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "dispute-service": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  }
}
